            <div class="task-message" data-aos="fade-up">
              <img class="horse-avatar" src="https://kitt.lewagon.com/placeholder/users/gabriel-dehan">
              <div class="task-message-body">
              <p><strong><%= horse.name %> - Box nÂ°<%= horse.box %></strong></p>
              <p>
                <%= render "task_list", horse: horse, tasks: horse.evening_tasks.not_done, time: "evening" %>
              </p>
              </div>
              <img class="avatar-large">
            </div>
          </div>
        <% end %>
      <% end %>
