    </div>
  <%else %>
    <div class="horse-avatar" style="background-image: url('<%= image_path("default-horse.jpg")  %>')">
    </div>
  <% end %>
  <div class="task-message-body">
    <p><strong><%= task.horse.name %>  - Box nÂ° <%= task.horse.box %></strong></p>
    <p>
      <%= task.activity&.name %>
    </p>
  </div>
  <%= link_to "S'assigner", mark_as_doing_path(task_id: task.id), remote: true, class: "btn btn-default" %>
</div>
