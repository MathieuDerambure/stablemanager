<div class="task-message" data-task-id="<%= task.id %>" data-aos="fade-up">
  <% if task.horse.photo? %>
    <div class="horse-avatar" style="background-image: url('<%= cl_image_path task.horse.photo, width: 300, crop: :fill %>')">
    </div>
  <%else %>
    <div class="horse-avatar" style="background-image: url('<%= image_path("default-horse.jpg")  %>')">
    </div>
  <% end %>
  <div class="task-message-body">
    <p><strong><%= task.horse.name %></strong> Box nÂ° <%= task.horse.box %></p>
    <p class="text-primary">
      <%= task.activity&.name %>
    </p>
  </div>
  <%= link_to mark_as_doing_path(task_id: task.id), remote: true do%>
    <%= image_tag "user-default", class: "avatar-large"%>
  <% end %>
</div>
