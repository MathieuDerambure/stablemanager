function updateFoodTaskToDone() {
  const task = document.querySelector("[data-task-food-<%= @time %>-id='<%= @horse.id %>']");
  task.outerHTML = "<%= j render 'tasks/food/task_done', horse: @horse, time: @time %>";

  const message = document.getElementById('task-done-food-<%= @time %>-<%= @horse.id %>')

  setInterval(function(){
   message.remove();
  }, 1000);
}

updateFoodTaskToDone();
