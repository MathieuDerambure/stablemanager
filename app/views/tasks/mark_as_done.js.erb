function updateTaskToDone(partial){
  const task = document.querySelector("[data-task-id='<%= @task.id %>']");
  task.outerHTML = partial;
  const message = document.getElementById('task-done-<%= @task.id %>')
  setInterval(function(){
   message.remove();
  }, 1000);
}
updateTaskToDone("<%= j render 'task_done', task: @task %>");

