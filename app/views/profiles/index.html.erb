<div class="container">
  <!-- Nav tabs -->
  <ul class="nav nav-tasks nav-tab nav-justify flex-menu navbar-fixed-bottom" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Propriétaires</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Employés</a></li>
    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Managers</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">
      <div class="col-xs-12">
        <h3> <strong>Propriétaires</strong> </h3>
        <div class="line"></div>
      </div>
      <% @owners.each do |profile| %>
        <%= link_to profile_path(profile) do %>
          <div class="col-xs-12">
            <div class="task-message">
              <div class="task-message-body">
                <p><strong><%= profile.first_name %> <%=profile.sur_name %></strong></p>
                <p><%= profile.phone %></p>
              </div>
              <div class="flex-box-index-item2">
                <div>
                  <% profile.horses.each do |horse| %>
                    <% if horse.photo.url.nil? %>
                      <% url = 'default-horse.jpg' %>
                    <% else %>
                      <% url = cl_image_path horse.photo, width: 40, height: 40, crop: :fill %>
                    <% end %>
                      <%= image_tag url, class:"avatar-large horse-avatar" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end if @owners.any? %>
    </div>


    <div role="tabpanel" class="tab-pane" id="profile">
      <div class="col-xs-12">
        <h3> <strong>Employés</strong> </h3>
        <div class="line"></div>
      </div>
      <% @employees.each do |profile| %>
          <%= link_to profile_path(profile) do %>
            <div class="col-xs-12">
              <div class="task-message">
                <div class="task-message-body">
                  <p><strong><%= profile.first_name %> <%=profile.sur_name %></strong></p>
                  <p><%= profile.phone %></p>
                </div>
                <div class="flex-box-index-item2">
                  <div>
                    <% profile.horses.each do |horse| %>
                      <% if horse.photo.url.nil? %>
                        <% url = 'default-horse.jpg' %>
                      <% else %>
                        <% url = cl_image_path horse.photo, width: 40, height: 40, crop: :fill %>
                      <% end %>
                        <%= image_tag url, class:"avatar-large" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
      <% end if @owners.any? %>
    </div>


    <div role="tabpanel" class="tab-pane" id="messages">
      <div class="col-xs-12">
        <h3> <strong>Managers</strong> </h3>
        <div class="line"></div>
      </div>
      <% @managers.each do |profile| %>
        <%= link_to profile_path(profile) do %>
          <div class="col-xs-12">
            <div class="task-message">
              <div class="task-message-body">
                <p><strong><%= profile.first_name %> <%=profile.sur_name %></strong></p>
                <p><%= profile.phone %></p>
              </div>
              <div class="flex-box-index-item2">
                <div>
                  <% profile.horses.each do |horse| %>
                    <% if horse.photo.url.nil? %>
                      <% url = 'default-horse.jpg' %>
                    <% else %>
                      <% url = cl_image_path horse.photo, width: 40, height: 40, crop: :fill %>
                    <% end %>
                      <%= image_tag url, class:"avatar-large" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end if @owners.any? %>
    </div>


  </div>
</div>

