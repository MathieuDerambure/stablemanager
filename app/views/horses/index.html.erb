<div class="background">
  <%= link_to new_horse_path, class:"btn btn-primary" do%>
  <i class="fas fa-plus-circle"></i> &nbsp;Ajouter un cheval
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-sm-2">
        <%= render './shared/search' %>
      </div>
    </div>
  </div>

  <div class="container background">
    <div class="row">
      <% @horses.each do |horse| %>
        <div class="col-xs-6 col-sm-4">
          <div class="card">
            <div class="card-category"><%= horse.name %></div>
            <div class="card-description">
              <p><%= horse.user.email %></p>
              <p>Box:<%= horse.box %></p>
            </div>
            <% if horse.photo.url.nil? %>
              <% url = 'http://res.cloudinary.com/dk6vsgttl/image/upload/v1534863841/0caeecaab59c4a6bd6d9a36666c361d3.jpg' %>
            <% else %>
              <% url = cl_image_path horse.photo, width: 40, height: 40, crop: :fill %>
            <% end %>
            <%= image_tag url, class: 'card-user' %>

  <!--           <%= link_to "Ã‰diter", edit_horse_path(horse) %>
            <%= link_to "Supprimer", horse_path(horse), method: :delete, data: { confirm: "Sure?" } %> -->
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
