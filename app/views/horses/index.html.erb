<div class="container">

  <div class="row">

    <div class="col-xs-12">

      <h3> <strong>🐴 Mes chevaux</strong> </h3>

      <%= render './shared/search' %>
      <div class="line"></div>
    </div>

    <div class="col-xs-12 col-md-6">
      <%= link_to new_horse_path do%>
        <i class="fas fa-plus-circle"></i> Ajouter un cheval
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @horses.each do |horse| %>
      <%= link_to horse do %>
        <div class="col-xs-12 col-md-4">
          <div class="horse card"  >
            <% if horse.photo?  %>
              <div class="horse-image wrapper" style="background-image: url('<%= cl_image_path horse.photo, height: 500, crop: :fill %>')">
              </div>
            <%else %>
              <div class="horse-image wrapper" style="background-image: url('<%= image_path("default-horse.jpg") %>')">
              </div>
            <% end %>
            <div class="data">
              <div class="content">
                <div class="title">
                  <p><strong><%= horse.name %></strong><span class="text-muted"> Box n°<%= horse.box %></span></p>
                  <p>Appartient à  <%= horse.user.sur_name %> <%= horse.user.first_name %></p>
                </div>
              </div>
            </div>
          </div>
        </div>

      <!-- End link -->
      <% end %>
    <!-- End each -->
    <% end %>
  <!-- End row -->
  </div>
</div>
<div class="espace-footer"></div>
