<div class="">

  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <%= link_to new_horse_path, class:"btn btn-primary" do%>
        <i class="fas fa-plus-circle"></i> &nbsp;Ajouter un cheval
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <%= render './shared/search' %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <% @horses.each do |horse| %>
        <div class="col-xs-6 col-sm-4">
          <div class="card">
            <div class="card-category"><%= horse.name %></div>
            <div class="card-description">
              <h2><%= horse.user.email %></h2>
              <p>Box:<%= horse.box %></p>
            </div>
            <% if horse.photo.url.nil? %>
              <% url = 'http://res.cloudinary.com/dk6vsgttl/image/upload/v1534863841/0caeecaab59c4a6bd6d9a36666c361d3.jpg' %>
            <% else %>
              <% url = cl_image_path horse.photo, width: 40, height: 40, crop: :fill %>
            <% end %>
            <%= image_tag url, class: 'card-user' %>

            <%= link_to "", edit_horse_path(horse), class: 'fas fa-edit card-edit' %>
            <%= link_to "", horse_path(horse), class: 'fas fa-trash card-delete', method: :delete, data: { confirm: "Sure?" } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
