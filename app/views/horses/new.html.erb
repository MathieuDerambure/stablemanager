<div class="container">
  <%= simple_form_for @horse do |f| %>
  <%= f.input :name %>
  <%= f.input :box %>
  <%= f.input :formula %>

  <h3><strong>Food</strong></h5>
  <h5>Matin</h5>
  <div>
    <p>Granule</p>
    <div class="better_radio">
      <% (0..5).each do |i| %>
        <%= radio_button_tag "granule[matin][quantite]", "#{i}" %>
        <%= label_tag "granule_matin_quantite_#{i}", "#{i}L" %>
      <% end %>
    </div>

    <p>Floconnet</p>
    <div class="better_radio">
      <% (0..5).each do |i| %>
        <%= radio_button_tag "floconnet[matin][quantite]", "#{i}" %>
        <%= label_tag "floconnet_matin_quantite_#{i}", "#{i}L" %>
      <% end %>
    </div>
    <p>Winsor</p>
    <div class="better_radio">
      <% (0..5).each do |i| %>
        <%= radio_button_tag "winsor[matin][quantite]", "#{i}" %>
        <%= label_tag "winsor_matin_quantite_#{i}", "#{i}L" %>
      <% end %>
    </div>
  </div>

  <h5>Midi</h5>
    <div>
      <p>Granule</p>
      <div class="better_radio">
        <% (0..5).each do |i| %>
          <%= radio_button_tag "granule[midi][quantite]", "#{i}" %>
          <%= label_tag "granule_midi_quantite_#{i}", "#{i}L" %>
        <% end %>
      </div>
      <p>Floconnet</p>
      <div class="better_radio">
        <% (0..5).each do |i| %>
          <%= radio_button_tag "floconnet[midi][quantite]", "#{i}" %>
          <%= label_tag "floconnet_midi_quantite_#{i}", "#{i}L" %>
        <% end %>
      </div>
      <p>Winsor</p>
      <div class="better_radio">
        <% (0..5).each do |i| %>
          <%= radio_button_tag "winsor[midi][quantite]", "#{i}" %>
          <%= label_tag "winsor_midi_quantite_#{i}", "#{i}L" %>
        <% end %>
      </div>
    </div>

  <h5>Soir</h5>
    <div>
      <p>Granule</p>
      <div class="better_radio">
        <% (0..5).each do |i| %>
          <%= radio_button_tag "granule[soir][quantite]", "#{i}" %>
          <%= label_tag "granule_soir_quantite_#{i}", "#{i}L" %>
        <% end %>
      </div>
      <p>Floconnet</p>
      <div class="better_radio">
        <% (0..5).each do |i| %>
          <%= radio_button_tag "floconnet[soir][quantite]", "#{i}" %>
          <%= label_tag "floconnet_soir_quantite_#{i}", "#{i}L" %>
        <% end %>
      </div>
      <p>Winsor</p>
      <div class="better_radio">
        <% (0..5).each do |i| %>
          <%= radio_button_tag "winsor[soir][quantite]", "#{i}" %>
          <%= label_tag "winsor_soir_quantite_#{i}", "#{i}L" %>
        <% end %>
      </div>
    </div>

  <h3><strong>Activités</strong></h5>
    <p>Paddock</p>
    <div class="better_checkbox">
      <% @week_days.each do |day|  %>
        <%= check_box_tag "activity[paddock][#{day}]", "1" %>
        <%= label_tag "activity[paddock][#{day}]", day %>
      <% end %>
    </div>
    <p>Marche</p>
    <div class="better_checkbox">
      <% @week_days.each do |day|  %>
        <%= check_box_tag "activity[marche][#{day}]", "1" %>
        <%= label_tag "activity[marche][#{day}]", day %>
      <% end %>
    </div>
    <p>Saut</p>
    <div class="better_checkbox">
      <% @week_days.each do |day|  %>
        <%= check_box_tag "activity[saut][#{day}]", "1" %>
        <%= label_tag "activity[saut][#{day}]", day %>
      <% end %>
    </div>
    <p>Promenade</p>
    <div class="better_checkbox">
      <% @week_days.each do |day|  %>
        <%= check_box_tag "activity[promenade][#{day}]", "1" %>
        <%= label_tag "activity[promenade][#{day}]", day %>
      <% end %>
    </div>

    <h3><strong>Véterinaire</strong></h3>
    <%= select_tag "vetenary[name]" %>
    <div class="form-wrapper">
        <div class="col-xs-6 col-md-6">
          <%= label_tag "Dernier passage" %>
          <%= text_field_tag "starts_at_veto", nil, class: "datepicker" %>
        </div>
        <div class="col-xs-6 col-md-6">

          <%= label_tag "Prochain passage" %>
          <%= text_field_tag "ends_at_veto", nil, class: "datepicker" %>
        </div>
      </div>

    <h3><strong>Vaccins / Vermifuges</strong></h3>
    <% (1..2).each do |i| %>
      <div class="form-wrapper">
          <div class="col-xs-6 col-md-6">
            <%= label_tag "Derniere prise" %>
            <%= text_field_tag "starts_at_med_#{i}", nil, class: "datepicker" %>
          </div>
          <div class="col-xs-6 col-md-6">
            <%= label_tag "Prochaine prise" %>
            <%= text_field_tag "ends_at_med_#{i}", nil, class: "datepicker" %>
          </div>
      </div>
      <br/>
    <% end %>
  <%= f.submit %>
  <% end %>
</div>
